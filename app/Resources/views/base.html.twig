<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Rotherfield Freelance PHP Development{% endblock %}</title>
        
        <script src="http://www.google.com/jsapi" type="text/javascript"></script> 
        <script type="text/javascript">google.load("jquery","1");google.load("jqueryui","1");</script>
        {% javascripts "@RothersStaticBundle/Resources/public/js/jQuery.radmenu.min.js" output="bundles/RothersStaticBundle/js/radial.js"%}
            <script src="{{ asset_url }}" ></script>
        {% endjavascripts %}
        
        {% block stylesheets %}
            {% stylesheets "@RothersStaticBundle/Resources/public/css/reset.css" output="bundles/rothersstatic/css/reset.css"%}
                <link href="{{ asset_url }}" rel="stylesheet"  />
            {% endstylesheets %}
            <link href='http://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic' rel='stylesheet' type='text/css'>
            {% stylesheets "@RothersStaticBundle/Resources/public/css/style.css" output="bundles/rothersstatic/css/style.css"%}
                <link href="{{ asset_url }}" rel="stylesheet"  />
            {% endstylesheets %}
        {% endblock %}
        
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div class="wrapper">
            <header class="header">
                {% block header %}{% endblock %}
                <div class="cb"></div>
            </header>            
            <section class="body">
                {% block body %}{% endblock %}
                <div class="cb"></div>
            </section>            
            <dfooter class="footer">
                {% block footer %}{% endblock %}
                <div class="cb"></div>
            </footer>            
            <div class="cb"></div>
        </div>
        <script>
            {% block javascripts %}{% endblock %}
        </script>
    </body>
</html>

{% extends 'form_div_layout.html.twig' %}

{% block form_widget %}
{% spaceless %}
  {{ block('field_rows') }}
  {{ form_rest(form) }}
{% endspaceless %}
{% endblock form_widget %}

{% block field_rows %}
{% spaceless %}
    {% for child in form %}
        {{ form_errors(child) }}
    {% endfor %}
    {% for child in form %}
        {{ form_row(child) }}
    {% endfor %}
{% endspaceless %}
{% endblock field_rows %}

{% block field_row %}
  <div {% if form_errors(form)|length > 0 %}class="oxygen-form-error"{% endif %}>
    {{ form_label(form) }}     
    {{ form_widget(form) }}
  </div>
{% endblock %}

{% block oxygen_custom_file_widget %}
{% spaceless %}
    <div class="show">      
    {% if value %}
        {% for val in value|string_to_array('|') %}
            {{ media_show(val) }}    
        {% endfor %}
    {% endif %}
    </div>
    <input type="hidden" {{ block('widget_attributes') }} value="{{ value }}" />
    {{ media_system(id, true) }}
{% endspaceless %}
{% endblock oxygen_custom_file_widget %}

{% block generic_label %}
  {% spaceless %}
    {% if required %}
      {% set attr = attr|merge({'class': attr.class|default('') ~ ' required'}) %}
    {% endif %}
    <label{% for attrname,attrvalue in attr %} {{attrname}}="{{attrvalue}}"{% endfor %}>
      {{ label|trans }}
      {% if required and label %}
        <span class="required">*</span>
      {% endif %}
    </label>
  {% endspaceless %}
{% endblock %}